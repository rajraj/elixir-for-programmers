<p>Turns left: <%= @tally.turns_left %></p>
<p>Word so far: <%= word_so_far(@tally.letters) %></p>
<p>Used letters: <%= word_so_far(@tally.used_letters) %></p>

<%= if game_over?(@tally.game_state) do %>
  <%= new_game_button(@conn) %>
<% else %>
  <%= form_for(@conn, hangman_path(@conn, :make_move), [as: :make_move, method: :put], fn f -> %>
    <%= text_input(f, :guess) %>
    <%= submit("Make next move") %>
  <% end) %>
<% end %>
